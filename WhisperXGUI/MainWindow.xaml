<Window x:Class="WhisperXGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WhisperX Subtitle Generator" Height="540" Width="780" MinWidth="720" MinHeight="480">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Media File:" VerticalAlignment="Center"/>
            <TextBox Width="430" Text="{Binding InputFile, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0"/>
            <Button Content="Browse..." Width="90" Click="BrowseFile_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="1">
            <TextBlock Text="Output Folder:" VerticalAlignment="Center"/>
            <TextBox Width="430" Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}" Margin="8,0,0,0"/>
            <Button Content="Browse..." Width="90" Click="BrowseOutput_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8" Grid.Row="2">
            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                <TextBlock Text="Model:" VerticalAlignment="Center"/>
                <ComboBox Width="120" SelectedItem="{Binding SelectedModel}" ItemsSource="{Binding Models}" Margin="4,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                <TextBlock Text="Format:" VerticalAlignment="Center"/>
                <ComboBox Width="90" SelectedItem="{Binding SelectedFormat}" ItemsSource="{Binding Formats}" Margin="4,0,0,0"/>
            </StackPanel>
            <CheckBox Content="Diarize" IsChecked="{Binding Diarize}" Margin="0,0,12,0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                <TextBlock Text="Language:" VerticalAlignment="Center"/>
                <TextBox Width="70" Text="{Binding LanguageOverride}" Margin="4,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                <TextBlock Text="Device:" VerticalAlignment="Center"/>
                <ComboBox Width="80" SelectedItem="{Binding SelectedDevice}" ItemsSource="{Binding Devices}" Margin="4,0,0,0"/>
            </StackPanel>
            <Button Content="Run" Width="80" Click="Run_Click" IsEnabled="{Binding CanRun}"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click" IsEnabled="{Binding IsRunning}" Margin="8,0,0,0"/>
        </StackPanel>

        <GroupBox Header="Log" Grid.Row="3" Margin="0,0,0,8">
            <Grid>
                <TextBox Text="{Binding LogText}" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            </Grid>
        </GroupBox>

        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="200" Height="16" IsIndeterminate="{Binding IsRunning}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
